<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_margin"
        android:layout_marginRight="@dimen/layout_margin"
        android:layout_marginTop="@dimen/layout_margin_small"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <include
            layout="@layout/layout_tag_user_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_margin" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray20" />


        <ImageView
            android:id="@+id/aty_my_qr_code_image_code"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginLeft="@dimen/layout_margin_small"
            android:layout_marginRight="@dimen/layout_margin_small"
            android:layout_marginTop="@dimen/layout_margin_small" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_margin_small"
            android:layout_marginTop="@dimen/layout_margin"
            android:text="已绑定车辆二维码"
            android:textColor="@color/gray50"
            android:textSize="@dimen/text_size_small" />
    </LinearLayout>


</ScrollView>