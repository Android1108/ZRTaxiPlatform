<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/layout_margin"
        android:paddingTop="@dimen/layout_margin"
        android:text="请选择日期"
        android:textColor="@color/black70"
        android:textSize="@dimen/text_size_medium" />

    <com.aigestudio.wheelpicker.widgets.WheelDatePicker
        android:id="@+id/dialog_select_date_wdp_date_picker"
        android:layout_width="match_parent"

        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@id/dialog_negative"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_onclick"
            android:gravity="center"
            android:paddingBottom="@dimen/layout_margin_tiny"
            android:paddingTop="@dimen/layout_margin_tiny"
            android:text="取消"
            android:textColor="@color/black70"
            android:textSize="@dimen/text_size_medium" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/layout_margin"
            android:layout_marginTop="@dimen/layout_margin"
            android:background="@color/gray10" />

        <TextView
            android:id="@id/dialog_positive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_onclick"
            android:gravity="center"
            android:paddingBottom="@dimen/layout_margin_tiny"
            android:paddingTop="@dimen/layout_margin_tiny"
            android:text="确定"
            android:textColor="@color/black70"
            android:textSize="@dimen/text_size_medium" />
    </LinearLayout>


</LinearLayout>