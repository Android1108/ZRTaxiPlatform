<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">


        <FrameLayout
            android:id="@+id/aty_driver_discount_layout_refuel_card_recharge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/ic_refuel_card_recharge"
                android:drawablePadding="@dimen/layout_margin"
                android:gravity="center"
                android:paddingBottom="@dimen/layout_margin_small"
                android:paddingTop="@dimen/layout_margin_small"
                android:text="加油卡充值"
                android:textColor="@color/black70"
                android:textSize="@dimen/text_size_small" />

        </FrameLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/layout_margin"
            android:layout_marginTop="@dimen/layout_margin"
            android:background="@color/gray20" />

        <FrameLayout
            android:id="@+id/aty_driver_discount_layout_phone_recharge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/ic_phone_recharge"
                android:drawablePadding="@dimen/layout_margin"
                android:gravity="center"
                android:paddingBottom="@dimen/layout_margin_small"
                android:paddingTop="@dimen/layout_margin_small"
                android:text="手机充值"
                android:textColor="@color/black70"
                android:textSize="@dimen/text_size_small" />

        </FrameLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray10"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/layout_margin_tiny"
        android:paddingTop="@dimen/layout_margin_tiny">

        <View
            android:layout_width="50dp"
            android:layout_height="1px"
            android:background="@color/gray20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_marginRight="@dimen/layout_margin"
            android:text="附近商家"
            android:textColor="@color/black70"
            android:textSize="@dimen/text_size_medium" />

        <View
            android:layout_width="50dp"
            android:layout_height="1px"
            android:background="@color/gray20" />
    </LinearLayout>


    <include layout="@layout/layout_refresh_list_view" />

</LinearLayout>

