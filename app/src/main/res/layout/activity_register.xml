<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <org.wzeiri.zr.zrtaxiplatform.widget.ValueEditText
        android:id="@+id/aty_register_vet_phone"
        style="@style/valueEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_margin"
        android:layout_marginRight="@dimen/layout_margin"
        android:hint="@string/please_input"
        android:inputType="number"
        android:paddingLeft="@dimen/layout_margin_small"
        app:leftText="手机号" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_margin"
        android:layout_marginRight="@dimen/layout_margin"
        android:background="@drawable/bg_white_bottom_line_gray20"
        android:orientation="horizontal"
        android:paddingRight="@dimen/layout_margin">

        <org.wzeiri.zr.zrtaxiplatform.widget.ValueEditText
            android:id="@+id/aty_register_vet_code"
            style="@style/valueEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/please_input"
            android:inputType="number"
            android:paddingLeft="@dimen/layout_margin_small"
            app:leftText="验证码" />

        <TextView
            android:id="@+id/aty_register_text_send_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/layout_margin_mini"
            android:text="获取验证码"
            android:textColor="@color/orange1"
            android:textSize="@dimen/text_size_medium" />
    </LinearLayout>

    <org.wzeiri.zr.zrtaxiplatform.widget.ValueEditText
        android:id="@+id/aty_register_vet_password"
        style="@style/valueEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_margin"
        android:layout_marginRight="@dimen/layout_margin"
        android:hint="@string/please_input"
        android:inputType="textPassword"
        android:paddingLeft="@dimen/layout_margin_small"
        app:leftText="登录密码" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_margin_tiny"
        android:layout_marginRight="@dimen/layout_margin_tiny"
        android:layout_marginTop="@dimen/layout_margin"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/aty_register_cb_registration_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="我已阅读并同意"
            android:textColor="@color/black70"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/aty_register_text_registration_agreement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="《注册协议》"
            android:textColor="@color/orange1"
            android:textSize="@dimen/text_size_small" />
    </LinearLayout>

    <TextView
        android:id="@+id/aty_register_text_register"
        style="@style/submitText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin_medium"
        android:text="注册" />

</LinearLayout>