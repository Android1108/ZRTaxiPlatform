<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_bottom_line_gray20"
            android:orientation="vertical">


            <TextView
                android:id="@+id/aty_job_wanted_detail_info_text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin"
                android:paddingLeft="@dimen/layout_margin_small"
                android:textColor="@color/black70"
                android:textSize="@dimen/text_size_medium" />


            <org.wzeiri.zr.zrtaxiplatform.widget.ValueTextView
                android:id="@+id/aty_job_wanted_detail_info_vtv_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_bottom_line_gray20"
                android:paddingBottom="@dimen/layout_margin"
                android:paddingLeft="@dimen/layout_margin_small"
                android:paddingTop="@dimen/layout_margin"
                android:textColor="@color/gray50"
                android:textSize="@dimen/text_size_small"
                app:leftTextColor="@color/gray50"
                app:leftTextSize="@dimen/text_size_small" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_margin_small"
                android:background="@drawable/bg_white_bottom_line_gray20"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/layout_margin"
                android:paddingTop="@dimen/layout_margin">

                <TextView
                    android:id="@+id/aty_job_wanted_detail_info_text_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_publisher"
                    android:drawablePadding="@dimen/layout_margin"

                    android:textColor="@color/gray50"
                    android:textSize="@dimen/text_size_small" />

                <ImageView
                    android:id="@+id/aty_job_wanted_detail_info_image_call_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_margin"
                    android:layout_marginRight="@dimen/layout_margin"
                    android:src="@drawable/ic_call_phone"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_margin_small"
                android:layout_marginTop="@dimen/layout_margin"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/layout_margin">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_address" />

                <TextView
                    android:id="@+id/aty_job_wanted_detail_info_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_margin"
                    android:paddingBottom="@dimen/layout_margin"
                    android:textColor="@color/gray50"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/layout_margin"
            android:background="@color/white"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_bottom_line_gray20"
                android:paddingBottom="@dimen/layout_margin_tiny"
                android:paddingLeft="@dimen/layout_margin_small"
                android:paddingTop="@dimen/layout_margin_tiny"
                android:text="详细信息"
                android:textColor="@color/black70"
                android:textSize="@dimen/text_size_medium" />


            <WebView
                android:id="@+id/aty_job_wanted_detail_info_web_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin"
                android:paddingLeft="@dimen/layout_margin_small" />


             <LinearLayout
                 android:id="@+id/aty_job_wanted_detail_info_layout_image_layout"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="@dimen/layout_margin_small"
                 android:layout_marginTop="@dimen/layout_margin"
                 android:orientation="vertical" />


        </LinearLayout>

    </LinearLayout>


</ScrollView>