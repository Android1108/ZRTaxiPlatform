<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/layout_margin">

    <org.wzeiri.zr.zrtaxiplatform.widget.CircleImageView
        android:id="@+id/item_driver_discount_comment_image"
        android:layout_width="@dimen/image_size_mini"
        android:layout_height="@dimen/image_size_mini"
        android:layout_marginRight="@dimen/layout_margin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_driver_discount_comment_text_store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black70"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/item_driver_discount_comment_text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin"
            android:textColor="@color/gray50"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/item_driver_discount_comment_text_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_marginTop="@dimen/layout_margin"
            android:textColor="@color/black75"
            android:textSize="@dimen/text_size_small" />


    </LinearLayout>

</LinearLayout>