<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <org.wzeiri.zr.zrtaxiplatform.widget.ValueEditText
        android:id="@+id/aty_my_bank_card_edt_name"
        style="@style/valueEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入持卡人姓名"
        app:leftText="持卡人" />

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/bg_white_bottom_line_gray20"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <org.wzeiri.zr.zrtaxiplatform.widget.ValueEditText
        android:id="@+id/aty_my_bank_card_edt_bank_number"
        style="@style/valueEdit"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:hint="请输入银行卡号"
        android:inputType="number"
        app:leftText="银行卡号"
        android:enabled="false"
        />
        <TextView
            android:background="@color/white"
            android:id="@+id/aty_my_bank_card_text_select_bank_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/layout_margin_tiny"
            android:paddingRight="@dimen/layout_margin_tiny"
            android:text="修改"
            android:textColor="@color/orange1"
            android:textSize="@dimen/text_size_medium" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/bg_white_bottom_line_gray20"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <org.wzeiri.zr.zrtaxiplatform.widget.ValueTextView
            android:id="@+id/aty_my_bank_card_vdt_bank"
            style="@style/valueEdit"
            android:background="@null"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请选择开户银行"
            app:leftText="开户银行" />

        <TextView
            android:background="@color/white"
            android:id="@+id/aty_my_bank_card_text_select_bank"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="@dimen/layout_margin_tiny"
            android:paddingRight="@dimen/layout_margin_tiny"
            android:text="选择"
            android:textColor="@color/orange1"
            android:textSize="@dimen/text_size_medium" />


    </LinearLayout>

    <org.wzeiri.zr.zrtaxiplatform.widget.ValueEditText
        android:id="@+id/aty_my_bank_card_edt_phone"
        style="@style/valueEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入银行预留手机号"
        app:leftText="手机号" />

    <TextView
        android:id="@+id/aty_my_bank_card_text_save"
        style="@style/submitText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin_small"
        android:text="保存" />
</LinearLayout>