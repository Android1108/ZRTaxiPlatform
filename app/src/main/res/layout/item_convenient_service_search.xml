<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/layout_margin_mini"
    android:paddingLeft="@dimen/layout_margin"
    android:paddingRight="@dimen/layout_margin"
    android:paddingTop="@dimen/layout_margin_mini">


    <TextView
        android:id="@+id/item_convenient_service_search_text_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/orange1"
        android:textSize="@dimen/text_size_medium"

        />

    <TextView
        android:id="@+id/item_convenient_service_search_text_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/gray50"
        android:textSize="@dimen/text_size_small"

        />


</LinearLayout>