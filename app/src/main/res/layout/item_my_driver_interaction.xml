<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/layout_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_my_driver_interaction_text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:textColor="@color/black70"
                android:textSize="@dimen/text_size_large" />

            <TextView
                android:id="@+id/item_my_driver_interaction_text_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/black70"
                android:textSize="@dimen/text_size_medium" />
        </LinearLayout>

        <ImageView
            android:id="@+id/item_my_driver_interaction_image_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_margin"
            android:src="@mipmap/ic_launcher" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin"
        android:background="@drawable/bg_transparent_bottom_line_gray20"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/layout_margin"
        android:paddingTop="@dimen/layout_margin"
        android:weightSum="4">

        <TextView
            android:id="@+id/item_my_driver_interaction_text_like_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_margin_small"
            android:drawableLeft="@drawable/ic_like_number"
            android:drawablePadding="@dimen/layout_margin"
            android:text="0"
            android:textColor="@color/gray50"
            android:textSize="@dimen/text_size_small" />

        <TextView

            android:id="@+id/item_my_driver_interaction_text_comment_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_margin_small"
            android:drawableLeft="@drawable/ic_comment"
            android:drawablePadding="@dimen/layout_margin"
            android:text="0"
            android:textColor="@color/gray50"
            android:textSize="@dimen/text_size_small" />


        <TextView
            android:id="@+id/item_my_driver_interaction_text_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="right"
            android:singleLine="true"
            android:textColor="@color/gray50"
            android:textSize="@dimen/text_size_small"

            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_margin"
        android:layout_marginTop="@dimen/layout_margin"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_my_driver_interaction_text_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_fillet_rectangle_frame_orange"
            android:paddingLeft="@dimen/layout_margin_tiny"
            android:paddingRight="@dimen/layout_margin_tiny"
            android:text="编辑"
            android:textColor="@color/orange1"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/item_my_driver_interaction_text_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_margin"
            android:background="@drawable/bg_fillet_rectangle_frame_orange"
            android:paddingLeft="@dimen/layout_margin_tiny"
            android:paddingRight="@dimen/layout_margin_tiny"
            android:text="删除"
            android:textColor="@color/orange1"
            android:textSize="@dimen/text_size_small" />


    </LinearLayout>

</LinearLayout>