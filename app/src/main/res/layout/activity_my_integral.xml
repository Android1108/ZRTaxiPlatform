<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/aty_my_integral_text_integral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_orange_gradient"
        android:gravity="center"
        android:paddingBottom="@dimen/layout_margin_large"
        android:paddingTop="@dimen/layout_margin_large"
        android:text="222"
        android:textColor="@color/white"
        android:textSize="30dp" />



    <android.support.design.widget.TabLayout

        android:id="@+id/layout_tab_layout_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_bottom_line_gray20"
        app:tabSelectedTextColor="@color/orange1"
        app:tabTextColor="@color/black70" />

    <android.support.v4.view.ViewPager
        android:id="@+id/layout_tab_layout_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>