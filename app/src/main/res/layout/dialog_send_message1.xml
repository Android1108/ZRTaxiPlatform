<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/layout_margin"
    android:paddingLeft="@dimen/layout_margin_tiny"
    android:paddingRight="@dimen/layout_margin_tiny"
    android:paddingTop="@dimen/layout_margin">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dialog_send_message_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/black80"
            android:textSize="@dimen/text_size_medium" />
    </FrameLayout>

    <TextView
        android:id="@id/dialog_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin_tiny"
        android:textColor="@color/gray20" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin"
        android:background="@color/gray05"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/dialog_send_message_edit_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:hint="请输入验证码"
            android:inputType="number"
            android:paddingBottom="@dimen/layout_margin"
            android:paddingLeft="@dimen/layout_margin"
            android:paddingTop="@dimen/layout_margin"
            android:textColor="@color/black80"
            android:textSize="@dimen/text_size_medium" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/layout_margin_mini"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_marginRight="@dimen/layout_margin"
            android:layout_marginTop="@dimen/layout_margin_mini"
            android:background="@color/gray20" />

        <TextView
            android:id="@+id/dialog_send_message_text_send_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_marginRight="@dimen/layout_margin"
            android:ems="5"
            android:gravity="center"
            android:paddingBottom="@dimen/layout_margin_mini"
            android:paddingTop="@dimen/layout_margin_mini"
            android:text="重新获取"
            android:textColor="@color/orange1"
            android:textSize="@dimen/text_size_medium" />

    </LinearLayout>

    <TextView
        android:id="@id/dialog_positive"
        style="@style/submitText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="@dimen/layout_margin"
        android:text="确定" />


</LinearLayout>