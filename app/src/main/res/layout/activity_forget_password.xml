<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_bottom_line_gray20"
        android:orientation="vertical"
        android:paddingLeft="@dimen/layout_margin_tiny"
        android:paddingRight="@dimen/layout_margin_tiny"
        app:divider="@drawable/bg_layout_line"
        app:showDividers="middle">

        <org.wzeiri.zr.zrtaxiplatform.widget.ValueEditText
            android:id="@+id/aty_forget_password_vet_phone"
            style="@style/valueEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入手机号"
            android:inputType="number"
            android:paddingLeft="@dimen/layout_margin_small"
            app:leftText="手机号" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:orientation="horizontal"
            android:paddingRight="@dimen/layout_margin">

            <org.wzeiri.zr.zrtaxiplatform.widget.ValueEditText
                android:id="@+id/aty_forget_password_vet_code"
                style="@style/valueEdit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入验证码"
                android:inputType="number"
                android:paddingLeft="@dimen/layout_margin_small"
                app:leftText="验证码" />

            <TextView
                android:id="@+id/aty_forget_password_text_send_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/layout_margin_mini"
                android:text="获取验证码"
                android:textColor="@color/orange1"
                android:textSize="@dimen/text_size_medium" />
        </LinearLayout>

        <org.wzeiri.zr.zrtaxiplatform.widget.ValueEditText
            android:id="@+id/aty_forget_password_vet_password"
            style="@style/valueEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/layout_margin_small"
            app:leftText="新密码" />

        <org.wzeiri.zr.zrtaxiplatform.widget.ValueEditText
            android:id="@+id/aty_forget_password_vet_again_password"
            style="@style/valueEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请确认新密码"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/layout_margin_small"
            app:leftText="确认密码" />
    </android.support.v7.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/aty_forget_password_text_submit"
        style="@style/submitText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin_medium"
        android:text="确定" />

</LinearLayout>