<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/white"
    android:orientation="vertical">


    <RadioGroup
        android:visibility="gone"
        android:id="@+id/aty_payment_qr_code_rg_pay_fee_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_margin_small"
        android:layout_marginRight="@dimen/layout_margin_small"
        android:layout_marginTop="@dimen/layout_margin_tiny"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/aty_payment_qr_code_rb_wechat_fee_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="@dimen/layout_margin"
            android:paddingTop="@dimen/layout_margin"
            android:text="微信收款码"
            android:textSize="@dimen/text_size_small" />

        <RadioButton
            android:id="@+id/aty_payment_qr_code_rb_alpay_fee_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="@dimen/layout_margin"
            android:paddingTop="@dimen/layout_margin"
            android:text="支付宝收款码"
            android:textSize="@dimen/text_size_small" />

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginBottom="@dimen/layout_margin_small"
        android:layout_marginLeft="@dimen/layout_margin_medium"
        android:layout_marginRight="@dimen/layout_margin_medium"
        android:layout_marginTop="@dimen/layout_margin_small"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/activity_payment_qr_code_wx"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="微信收款   "
                android:background="@color/green1"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_big"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/activity_payment_qr_code_ali"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="支付宝收款"
                android:gravity="center"
                android:background="@color/blue1"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_big"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v4.view.ViewPager
                android:id="@+id/activity_payment_qr_code_viewpager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v4.view.ViewPager>

        </LinearLayout>

