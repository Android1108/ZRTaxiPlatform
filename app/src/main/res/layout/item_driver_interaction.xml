<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/layout_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_driver_interaction_text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:textColor="@color/black70"
                android:textSize="@dimen/text_size_large" />

            <TextView
                android:id="@+id/item_driver_interaction_text_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/black70"
                android:textSize="@dimen/text_size_medium" />
        </LinearLayout>

        <ImageView
            android:id="@+id/item_driver_interaction_image_cover"
            android:layout_width="@dimen/image_size_small"
            android:layout_height="@dimen/image_size_little"
            android:layout_marginLeft="@dimen/layout_margin"
          />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="4">

        <org.wzeiri.zr.zrtaxiplatform.widget.CircleImageView
            android:id="@+id/item_driver_interaction_image_release_avatar"
            android:layout_width="@dimen/icon_medium"
            android:layout_height="@dimen/icon_medium" />

        <TextView
            android:id="@+id/item_driver_discount_comment_text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_margin"
            android:textColor="@color/gray60"
            android:textSize="@dimen/text_size_small" />


        <TextView
            android:id="@+id/item_driver_interaction_text_like_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_margin_small"
            android:drawableLeft="@drawable/ic_like_number"
            android:drawablePadding="@dimen/layout_margin"
            android:text="0"
            android:textColor="@color/gray50"
            android:textSize="@dimen/text_size_small" />

        <TextView

            android:id="@+id/item_driver_interaction_text_comment_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_margin_small"
            android:drawableLeft="@drawable/ic_comment"
            android:drawablePadding="@dimen/layout_margin"
            android:text="0"
            android:textColor="@color/gray50"
            android:textSize="@dimen/text_size_small" />


        <TextView
            android:id="@+id/item_driver_interaction_text_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="right"
            android:singleLine="true"
            android:textColor="@color/gray50"
            android:textSize="@dimen/text_size_small"

            />
    </LinearLayout>

</LinearLayout>