<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/aty_legal_advice_edit_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_bottom_line_gray20"
        android:gravity="top"
        android:hint="咨询内容"
        android:lines="10"
        android:maxLines="10"
        android:padding="@dimen/layout_margin_tiny" />


    <org.wzeiri.zr.zrtaxiplatform.widget.ValueTextView

        android:id="@+id/aty_legal_advice_vtv_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin_small"
        android:background="@drawable/bg_onclick"
        android:drawableRight="@drawable/ic_arrow_right_gray"
        android:hint="请选择法律咨询类型"
        android:padding="@dimen/layout_margin_tiny"
        android:textColor="@color/black70"
        android:textSize="@dimen/text_size_small"
        app:leftMinWidth="@dimen/value_text_width"
        app:leftText="咨询类型"
        app:leftTextColor="@color/black70"
        app:leftTextSize="@dimen/text_size_small" />


    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/layout_margin"
        android:paddingTop="@dimen/layout_margin">

        <TextView
            android:id="@+id/aty_legal_advice_text_submit"
            style="@style/submitText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="提交" />
    </FrameLayout>

</LinearLayout>