<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/layout_margin_tiny"
    android:paddingRight="@dimen/layout_margin_tiny"
    android:paddingTop="@dimen/layout_margin_tiny">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_transparent_bottom_line_gray20"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/layout_margin_tiny">

        <ImageView
            android:id="@+id/item_my_posting_advertisement_image"
            android:layout_width="@dimen/image_size_medium"
            android:layout_height="@dimen/image_size_medium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/layout_margin_tiny"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_my_posting_advertisement_text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLength="2"
                android:textColor="@color/black70"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/item_my_posting_advertisement_text_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray50"
                android:textSize="@dimen/text_size_small" />

        </LinearLayout>

    </LinearLayout>


    <org.wzeiri.zr.zrtaxiplatform.widget.ValueTextView
        android:id="@+id/item_my_posting_advertisement_vtv_type_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_margin"
        android:layout_marginTop="@dimen/layout_margin"
        android:textColor="@color/gray50"
        android:textSize="@dimen/text_size_small"
        app:rightTextColor="@color/orange1"
        app:rightTextSize="@dimen/text_size_small" />

</LinearLayout>