<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_white_bottom_line_gray20"
            android:orientation="vertical">

            <TextView
                android:id="@+id/aty_financial_loss_detail_info_text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin"
                android:paddingLeft="@dimen/layout_margin_small"
                android:textColor="@color/black70"
                android:textSize="@dimen/text_size_medium" />


            <org.wzeiri.zr.zrtaxiplatform.widget.ValueTextView
                android:id="@+id/aty_financial_loss_detail_info_vtv_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/layout_margin_tiny"
                android:paddingLeft="@dimen/layout_margin_small"
                android:paddingTop="@dimen/layout_margin_tiny"
                android:textColor="@color/gray50"
                android:textSize="@dimen/text_size_small"
                app:leftMinWidth="80dp"
                app:leftTextColor="@color/orange1"
                app:leftTextSize="@dimen/text_size_small" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_bottom_line_gray20"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/layout_margin"
            android:paddingLeft="@dimen/layout_margin_small"
            android:paddingTop="@dimen/layout_margin">


            <org.wzeiri.zr.zrtaxiplatform.widget.CircleImageView
                android:id="@+id/aty_financial_loss_detail_info_civ_avatar"
                android:layout_width="@dimen/image_size_little"
                android:layout_height="@dimen/image_size_little" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_margin"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/aty_financial_loss_detail_info_text_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black70"
                    android:textSize="@dimen/text_size_small" />

                <org.wzeiri.zr.zrtaxiplatform.widget.ValueTextView
                    android:id="@+id/aty_financial_loss_detail_info_vtv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin_mini"
                    android:textColor="@color/orange1"
                    android:textSize="@dimen/text_size_small"
                    app:leftTextColor="@color/gray50"
                    app:leftTextSize="@dimen/text_size_small" />


            </LinearLayout>

            <ImageView
                android:id="@+id/aty_financial_loss_detail_info_image_call_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_margin"
                android:layout_marginRight="@dimen/layout_margin"
                android:src="@drawable/ic_call_phone"
                android:visibility="gone" />

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin_small"
            android:background="@drawable/bg_white_bottom_line_gray20"
            android:paddingBottom="@dimen/layout_margin_tiny"
            android:paddingLeft="@dimen/layout_margin_small"
            android:paddingTop="@dimen/layout_margin_tiny"
            android:text="乘车信息"
            android:textColor="@color/black70"
            android:textSize="@dimen/text_size_medium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/layout_margin"
            android:paddingLeft="@dimen/layout_margin_small">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/layout_margin"
                android:paddingTop="@dimen/layout_margin"
                android:src="@drawable/ic_address"
                android:textColor="@color/black70"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/aty_financial_loss_detail_info_text_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_margin"
                android:layout_marginRight="@dimen/layout_margin_small"
                android:drawablePadding="@dimen/layout_margin"
                android:paddingTop="@dimen/layout_margin"
                android:textColor="@color/black70"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/layout_margin"
            android:paddingLeft="@dimen/layout_margin_small"
            android:paddingTop="@dimen/layout_margin">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_detail_time" />

            <TextView
                android:id="@+id/aty_financial_loss_detail_info_text_by_car_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_margin"
                android:textColor="@color/gray50"
                android:textSize="@dimen/text_size_small" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/layout_margin"
            android:paddingLeft="@dimen/layout_margin_small"
            android:paddingTop="@dimen/layout_margin">

            <TextView
                android:id="@+id/aty_financial_loss_detail_info_text_by_plateNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_margin"
                android:textColor="@color/gray50"
                android:textSize="@dimen/text_size_small" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin"
            android:background="@color/white"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_bottom_line_gray20"
                android:paddingBottom="@dimen/layout_margin_tiny"
                android:paddingLeft="@dimen/layout_margin_small"
                android:paddingTop="@dimen/layout_margin_tiny"
                android:text="详细信息"
                android:textColor="@color/black70"
                android:textSize="@dimen/text_size_medium" />


            <TextView
                android:id="@+id/aty_financial_loss_detail_info_text_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin"
                android:paddingLeft="@dimen/layout_margin_small"
                android:textColor="@color/black70"
                android:textSize="@dimen/text_size_small" />


            <LinearLayout
                android:id="@+id/aty_financial_loss_detail_info_layout_image_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_margin_small"
                android:layout_marginRight="@dimen/layout_margin_small"
                android:layout_marginTop="@dimen/layout_margin"
                android:orientation="vertical" />


        </LinearLayout>

    </LinearLayout>


</ScrollView>