<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/layout_refresh_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <FrameLayout
        android:id="@+id/aty_select_refueling_card_layout_add_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_margin"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_white_top_bottom_line_gray20"
        android:paddingBottom="@dimen/layout_margin_small"
        android:paddingTop="@dimen/layout_margin_small">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_add_taxi"
            android:drawablePadding="@dimen/layout_margin"
            android:gravity="center"
            android:text="添加新油卡"
            android:textColor="@color/black70"
            android:textSize="@dimen/text_size_small" />
    </FrameLayout>

</LinearLayout>