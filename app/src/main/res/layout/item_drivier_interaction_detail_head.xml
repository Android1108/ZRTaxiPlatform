<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_driver_interaction_detail_head_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/layout_margin"
        android:paddingLeft="@dimen/layout_margin_tiny"
        android:paddingRight="@dimen/layout_margin_tiny"
        android:paddingTop="@dimen/layout_margin"
        android:textColor="@color/black70"
        android:textSize="@dimen/text_size_big" />


    <LinearLayout
        android:id="@+id/item_driver_interaction_detail_head_layout_user_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/layout_margin_tiny"
        android:paddingRight="@dimen/layout_margin_tiny">

        <org.wzeiri.zr.zrtaxiplatform.widget.CircleImageView
            android:id="@+id/item_driver_interaction_detail_head_image_avatar"
            android:layout_width="@dimen/image_size_little"
            android:layout_height="@dimen/image_size_little" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_driver_interaction_detail_head_text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black70"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:id="@+id/item_driver_interaction_detail_head_text_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin_mini"
                android:textColor="@color/gray50"
                android:textSize="@dimen/text_size_small" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/item_driver_interaction_detail_head_text_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_margin_small"
        android:layout_marginRight="@dimen/layout_margin_tiny"
        android:layout_marginTop="@dimen/layout_margin"
        android:textColor="@color/black70"
        android:textSize="@dimen/text_size_medium" />

    <LinearLayout
        android:id="@+id/item_driver_interaction_detail_head_layout_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin_tiny"
        android:orientation="vertical"
        android:paddingLeft="@dimen/layout_margin_small"
        android:paddingRight="@dimen/layout_margin_small">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin"
        android:background="@color/gray10"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/layout_margin"
        android:paddingTop="@dimen/layout_margin">

        <View
            android:layout_width="@dimen/layout_margin_medium"
            android:layout_height="1px"
            android:background="@color/gray50" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_marginRight="@dimen/layout_margin"
            android:gravity="center"
            android:text="所有评论"
            android:textColor="@color/gray50"
            android:textSize="@dimen/text_size_medium" />

        <View
            android:layout_width="@dimen/layout_margin_medium"
            android:layout_height="1px"
            android:background="@color/gray50" />
    </LinearLayout>


</LinearLayout>