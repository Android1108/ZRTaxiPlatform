<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/layout_margin">


    <ImageView
        android:id="@+id/item_security_study_image"
        android:layout_width="@dimen/image_size_small"
        android:layout_height="@dimen/image_size_small" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_margin"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_security_study_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black70"
            android:textSize="@dimen/text_size_large" />


        <org.wzeiri.zr.zrtaxiplatform.widget.ValueTextView
            android:id="@+id/item_security_study_vtv_study_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin"
            android:textColor="@color/gray50"
            android:textSize="@dimen/text_size_small"
            app:leftMinWidth="50dp"
            app:leftTextColor="@color/orange1"
            app:leftTextSize="@dimen/text_size_small" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_security_study_text_study"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_margin"
        android:background="@drawable/bg_fillet_rectangle_frame_orange"
        android:paddingLeft="@dimen/layout_margin_small"
        android:paddingRight="@dimen/layout_margin_small"
        android:text="学习"
        android:textColor="@color/orange1"
        android:textSize="@dimen/text_size_medium"
        android:visibility="gone" />

</LinearLayout>