<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/aty_driver_discount_detail_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_bottom_line_gray20"
                android:orientation="vertical"
                android:paddingTop="@dimen/layout_margin">

                <TextView
                    android:id="@+id/aty_driver_discount_detail_text_store_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_margin_small"
                    android:textColor="@color/black70"
                    android:textSize="@dimen/text_size_large" />


                <TextView
                    android:id="@+id/aty_driver_discount_detail_text_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin"
                    android:background="@drawable/bg_white_bottom_line_gray20"
                    android:paddingBottom="@dimen/layout_margin"
                    android:paddingLeft="@dimen/layout_margin_small"
                    android:textColor="@color/gray50"
                    android:textSize="@dimen/text_size_small" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_margin_small"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/aty_driver_discount_detail_text_store_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/layout_margin"
                        android:background="@drawable/bg_white_bottom_line_gray20"
                        android:drawableLeft="@drawable/ic_location"
                        android:drawablePadding="@dimen/layout_margin"
                        android:paddingBottom="@dimen/layout_margin"
                        android:paddingRight="@dimen/layout_margin"
                        android:paddingTop="@dimen/layout_margin" />
                </LinearLayout>


                <TextView
                    android:id="@+id/aty_driver_discount_detail_text_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_margin_small"
                    android:background="@drawable/bg_white_bottom_line_gray20"
                    android:drawableLeft="@drawable/ic_phone"
                    android:drawablePadding="@dimen/layout_margin"
                    android:padding="@dimen/layout_margin" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/layout_margin"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_white_bottom_line_gray20"
                    android:paddingBottom="@dimen/layout_margin_tiny"
                    android:paddingLeft="@dimen/layout_margin_small"
                    android:paddingTop="@dimen/layout_margin_tiny"
                    android:text="详细信息"
                    android:textColor="@color/black70"
                    android:textSize="@dimen/text_size_medium" />

                <WebView
                    android:id="@+id/aty_driver_discount_detail_web_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/aty_driver_discount_detail_image_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_margin_small"
            android:layout_marginRight="@dimen/layout_margin_small"
            android:layout_marginTop="@dimen/layout_margin"
            android:background="@drawable/bg_circular_black30"
            android:padding="@dimen/layout_margin"
            android:src="@drawable/ic_white_back" />


    </FrameLayout>


</android.support.v4.widget.NestedScrollView>