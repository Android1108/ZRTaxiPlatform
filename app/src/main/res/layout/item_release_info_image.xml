<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="120dp">

    <ImageView
        android:id="@+id/item_release_info_image_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/item_release_info_image_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/item_release_info_text_cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/orange1_80"
        android:gravity="center"
        android:paddingBottom="@dimen/layout_margin_mini"
        android:paddingTop="@dimen/layout_margin_mini"
        android:text="封面"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_small"
        android:visibility="gone" />

</FrameLayout>