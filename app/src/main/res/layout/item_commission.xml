<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/layout_margin"
    android:paddingLeft="@dimen/layout_margin_tiny"
    android:paddingRight="@dimen/layout_margin_tiny"
    android:paddingTop="@dimen/layout_margin">


    <ImageView
        android:id="@+id/item_commission_image_cover"
        android:layout_width="@dimen/image_size_small"
        android:layout_height="@dimen/image_size_medium"
        android:layout_marginRight="@dimen/layout_margin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_commission_text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/black70"
            android:textSize="@dimen/text_size_medium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_commission_text_surplus_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="剩余数量： "
                android:textColor="@color/gray40"
                android:textSize="@dimen/text_size_small"
                android:textStyle="" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="佣金: "
                android:textColor="@color/gray40"
                android:textSize="@dimen/text_size_small" />

            <org.wzeiri.zr.zrtaxiplatform.widget.ValueTextView
                android:id="@+id/item_commission_vtv_commission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange1"
                android:textSize="@dimen/text_size_big"
                app:leftTextColor="@color/orange1"
                app:leftTextSize="@dimen/text_size_small"
                app:rightTextColor="@color/orange1"
                app:rightTextSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/item_commission_text_commission_decimal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange1"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>