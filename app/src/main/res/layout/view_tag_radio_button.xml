<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/view_tag_radio_button_image_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/view_tag_radio_button_text_top_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black70"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/view_tag_radio_button_text_bottom_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin_mini"
            android:textColor="@color/gray60"
            android:textSize="@dimen/text_size_small" />
    </LinearLayout>

    <RadioButton
        android:id="@+id/view_tag_radio_button_rb_radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>