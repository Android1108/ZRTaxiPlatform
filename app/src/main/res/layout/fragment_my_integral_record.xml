<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/layout_margin_tiny"
    android:paddingRight="@dimen/layout_margin_tiny">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_bottom_line_gray20"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/layout_margin"
        android:paddingTop="@dimen/layout_margin">

        <TextView
            android:id="@+id/aty_my_integral_record_text_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/layout_margin"
            android:layout_weight="5"
            android:text="日期"
            android:textColor="@color/black75"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/aty_my_integral_record_text_operation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/layout_margin"
            android:layout_weight="3"
            android:text="操作"
            android:textColor="@color/black75"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/aty_my_integral_record_text_detail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/layout_margin"
            android:layout_weight="2"
            android:text="明细"
            android:textColor="@color/black75"
            android:textSize="@dimen/text_size_small" />

    </LinearLayout>

    <include layout="@layout/layout_refresh_list_view" />

</LinearLayout>