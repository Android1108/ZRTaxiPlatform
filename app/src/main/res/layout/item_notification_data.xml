<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_fillet_rectangle_white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/layout_margin"
    android:paddingLeft="@dimen/layout_margin_tiny"
    android:paddingRight="@dimen/layout_margin_tiny"
    android:paddingTop="@dimen/layout_margin">


    <TextView
        android:id="@+id/item_notification_data_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black80"
        android:textSize="@dimen/text_size_large" />

    <TextView
        android:id="@+id/item_notification_data_text_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/gray40"
        android:textSize="@dimen/text_size_medium" />

</LinearLayout>