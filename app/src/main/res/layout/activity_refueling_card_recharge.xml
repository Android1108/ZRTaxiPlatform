<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_bottom_line_gray20"
            android:orientation="vertical"
            android:paddingLeft="@dimen/layout_margin_tiny"
            app:divider="@drawable/bg_layout_line"
            app:showDividers="middle">


            <LinearLayout
                android:id="@+id/aty_refueling_card_recharge_layout_refueling_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/layout_margin"
                android:paddingLeft="@dimen/layout_margin_tiny"
                android:paddingRight="@dimen/layout_margin_tiny"
                android:paddingTop="@dimen/layout_margin">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:ems="4"
                    android:text="加油卡"
                    android:textColor="@color/black70"
                    android:textSize="@dimen/text_size_medium" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_margin_tiny"
                    android:layout_marginRight="@dimen/layout_margin_tiny"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/layout_margin"
                    android:paddingTop="@dimen/layout_margin">


                    <TextView
                        android:id="@+id/aty_refueling_card_recharge_text_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black70"
                        android:textSize="@dimen/text_size_medium" />

                    <TextView
                        android:id="@+id/aty_refueling_card_recharge_text_card_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/layout_margin"
                        android:textColor="@color/gray40"
                        android:textSize="@dimen/text_size_small" />

                </LinearLayout>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/layout_margin_tiny"
                    android:background="@drawable/ic_arrow_right_gray" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/layout_margin_tiny">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="充值金额"
                    android:textColor="@color/black70"
                    android:textSize="@dimen/text_size_small" />

                <org.wzeiri.zr.zrtaxiplatform.widget.flow.RadioFlowLayout
                    android:id="@+id/aty_refueling_card_recharge_fl_recharge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin"
                    android:paddingRight="@dimen/layout_margin_mini" />

            </LinearLayout>
        </android.support.v7.widget.LinearLayoutCompat>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin"
            android:paddingBottom="@dimen/layout_margin_tiny"
            android:paddingLeft="@dimen/layout_margin_small"
            android:paddingTop="@dimen/layout_margin_tiny"
            android:text="支付方式" />


        <RadioGroup
            android:id="@+id/aty_refueling_card_recharge_rg_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <RadioButton
                android:id="@+id/aty_refueling_card_recharge_rb_ali_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:button="@drawable/bg_onclick"
                android:drawableLeft="@drawable/ic_alpay"
                android:drawablePadding="@dimen/layout_margin"
                android:drawableRight="@drawable/button_radio_button"
                android:paddingBottom="@dimen/layout_margin_tiny"
                android:paddingLeft="@dimen/layout_margin_small"
                android:paddingRight="@dimen/layout_margin_small"
                android:paddingTop="@dimen/layout_margin_tiny"
                android:text="支付宝" />

            <RadioButton
                android:id="@+id/aty_refueling_card_recharge_rb_we_chat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:button="@drawable/bg_onclick"
                android:drawableLeft="@drawable/ic_wechat_pay"
                android:drawablePadding="@dimen/layout_margin"
                android:drawableRight="@drawable/button_radio_button"
                android:paddingBottom="@dimen/layout_margin_tiny"
                android:paddingLeft="@dimen/layout_margin_small"
                android:paddingRight="@dimen/layout_margin_small"
                android:paddingTop="@dimen/layout_margin_tiny"
                android:text="微信" />


        </RadioGroup>


        <TextView
            android:id="@+id/aty_refueling_card_recharge_text_play"
            style="@style/submitText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin_small"
            android:text="立即支付" />


    </LinearLayout>


</ScrollView>