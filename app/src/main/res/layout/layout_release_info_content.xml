<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/layout_margin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/layout_margin_small">

        <EditText
            android:id="@+id/layout_release_info_edit_title"
            style="@style/editTextBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin"
            android:hint="标题"
            android:paddingBottom="@dimen/layout_margin_small"
            android:paddingLeft="0dp"
            android:singleLine="true" />

        <EditText
            android:id="@+id/layout_release_info_edit_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin"
            android:background="@null"
            android:gravity="top"
            android:hint="描述"
            android:lines="10"
            android:paddingRight="@dimen/layout_margin_tiny"
            android:textColor="@color/black70"
            android:textSize="@dimen/text_size_small" />

        <org.wzeiri.zr.zrtaxiplatform.widget.flow.FlowLayout
            android:id="@+id/layout_release_info_fl_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin"
            android:paddingBottom="@dimen/layout_margin" />
    </LinearLayout>


</android.support.v4.widget.NestedScrollView>