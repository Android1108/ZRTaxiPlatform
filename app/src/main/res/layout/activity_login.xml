<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/aty_login_img_logo"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/ic_logo_launcher" />

        <EditText
            android:id="@+id/aty_login_edit_phone"
            style="@style/editTextBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_marginRight="@dimen/layout_margin"
            android:layout_marginTop="@dimen/layout_margin_large"
            android:hint="手机号"
            android:inputType="number" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_margin"
            android:layout_marginRight="@dimen/layout_margin"
            android:background="@drawable/bg_transparent_bottom_line_gray20"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/aty_login_edit_password"
                style="@style/editTextBackground"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="密码"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/aty_login_text_forget_password"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="@dimen/layout_margin"
                android:paddingRight="@dimen/layout_margin"
                android:text="忘记密码?"
                android:textColor="@color/gray40"
                android:textSize="@dimen/text_size_medium"

                />

        </LinearLayout>


        <TextView
            android:id="@+id/aty_login_text_login"
            style="@style/submitText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin_small"
            android:text="登录" />

        <TextView
            android:id="@+id/aty_login_text_register"
            style="@style/submitText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin_small"
            android:background="@drawable/bg_fillet_rectangle_frame_orange"
            android:gravity="center"
            android:paddingBottom="@dimen/layout_margin"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:paddingTop="@dimen/layout_margin"
            android:text="注册"
            android:textColor="@color/orange1"
            android:textSize="@dimen/text_size_medium" />


