<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.baidu.mapapi.map.TextureMapView
        android:id="@+id/aty_convenient_service_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true" />


    <FrameLayout
        android:id="@+id/aty_convenient_service_map_layout_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:paddingBottom="@dimen/layout_margin"
        android:paddingLeft="@dimen/layout_margin_small"
        android:paddingRight="@dimen/layout_margin_small"
        android:paddingTop="@dimen/layout_margin">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/aty_convenient_service_map_text_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_search"
                android:drawablePadding="@dimen/layout_margin"
                android:hint="输入关键字"
                android:paddingBottom="@dimen/layout_margin"
                android:paddingLeft="@dimen/layout_margin"
                android:paddingTop="@dimen/layout_margin"
                android:textSize="@dimen/text_size_medium" />

            <ImageView
                android:id="@+id/aty_convenient_service_map_image_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/text_size_mini"
                android:src="@drawable/ic_voice" />

        </LinearLayout>


    </FrameLayout>

    <LinearLayout
        android:id="@+id/aty_convenient_service_map_layout_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white80"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/layout_margin"
        android:paddingLeft="@dimen/layout_margin_small"
        android:paddingRight="@dimen/layout_margin_small"
        android:paddingTop="@dimen/layout_margin"
        android:visibility="gone">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/aty_convenient_service_map_text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/black70"
                android:textSize="@dimen/text_size_large" />

            <TextView
                android:id="@+id/aty_convenient_service_map_text_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/gray50"
                android:textSize="@dimen/text_size_medium" />

        </LinearLayout>


        <TextView
            android:id="@+id/aty_convenient_service_map_text_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="@color/gray50"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/aty_convenient_service_map_text_navigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_margin_small"
            android:drawablePadding="@dimen/layout_margin_mini"
            android:drawableTop="@drawable/ic_navigation"
            android:padding="@dimen/layout_margin_mini"
            android:text="导航"
            android:textColor="@color/orange1"
            android:textSize="@dimen/text_size_medium" />

    </LinearLayout>

    <ImageView
        android:id="@+id/aty_convenient_service_map_image_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="@dimen/layout_margin_tiny"
        android:src="@drawable/ic_select_map_location" />

</FrameLayout>