<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/layout_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_margin_small"
        android:layout_marginRight="@dimen/layout_margin_small"
        android:background="@drawable/bg_transparent_bottom_line_gray20"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/layout_margin">

        <ImageView
            android:id="@+id/item_notice_vehicle_lost_article_image"
            android:layout_width="@dimen/image_size_medium"
            android:layout_height="@dimen/image_size_little" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_notice_vehicle_lost_article_text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black70"
                android:textSize="@dimen/text_size_large" />

            <TextView
                android:id="@+id/item_notice_vehicle_lost_article_text_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin"
                android:textColor="@color/gray50"
                android:textSize="@dimen/text_size_small"

                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/layout_margin"
        android:paddingLeft="@dimen/layout_margin_small"
        android:background="@drawable/bg_white_bottom_line_gray20"
        android:paddingRight="@dimen/layout_margin_small"
        android:paddingTop="@dimen/layout_margin">

        <org.wzeiri.zr.zrtaxiplatform.widget.CircleImageView
            android:id="@+id/item_notice_vehicle_lost_article_image_avatar"
            android:layout_width="@dimen/icon_little"
            android:layout_height="@dimen/icon_little" />


        <org.wzeiri.zr.zrtaxiplatform.widget.ValueTextView
            android:id="@+id/item_notice_vehicle_lost_article_vtv_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_margin"
            android:textColor="@color/black70"
            android:textSize="@dimen/text_size_small"
            app:rightTextSize="@dimen/text_size_small" />

    </LinearLayout>


</LinearLayout>