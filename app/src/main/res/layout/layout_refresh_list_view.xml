<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/layout_refresh_empty"
        layout="@layout/layout_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:visibility="gone" />

    <org.wzeiri.zr.zrtaxiplatform.widget.RefreshLayout
        android:id="@+id/layout_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <org.wzeiri.zr.zrtaxiplatform.widget.RefreshListView
            android:id="@+id/layout_refresh_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:clipChildren="false"
            android:divider="@color/gray10"
            android:dividerHeight="1px"
            android:paddingBottom="@dimen/layout_margin" />

    </org.wzeiri.zr.zrtaxiplatform.widget.RefreshLayout>


</FrameLayout>